.header
  = link_to "orthopics", root_path, class: "header__logo"
  .header__search-box
    = form_with url: search_posts_path, local: true, method: :get, class: "search-form" do |form|
      = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"
      = form.submit "検索", class: "search-btn"
  %ul
    - if user_signed_in?
      %li
        = link_to current_user.name, user_path(current_user.id), class: "header__btn"
      %li
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__btn"
      %li
        = link_to "投稿する", new_post_path, class: "header__btn"
    - else
      %li
        = link_to "サインイン", new_user_session_path, class: "header__btn"
      %li
        = link_to "サインアップ", new_user_registration_path, class: "header__btn"